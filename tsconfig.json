{
  "compilerOptions": {
    "target": "ES2020", // Target modern JavaScript (ES2020)
    "useDefineForClassFields": true, // Use define for class fields (for better compatibility with React)
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Libraries to include (ES2020 features and DOM)
    "module": "ESNext", // Use the latest module system
    "skipLibCheck": true, // Skip type checking of declaration files for faster compilation
    "baseUrl": ".", // Base directory for resolving non-relative module names
    "paths": {
      "@/*": ["./src/*"] // Path alias for cleaner imports
    },
    "moduleResolution": "bundler", // Module resolution strategy
    "allowImportingTsExtensions": true, // Allow importing TypeScript extensions
    "isolatedModules": true, // Isolate modules for faster builds
    "moduleDetection": "force", // Force module detection
    "noEmit": true, // Do not emit output files
    "jsx": "react-jsx", // Use the new JSX transform for React
    "strict": true, // Enable all strict type-checking options
    "noUnusedLocals": true, // Report errors on unused local variables
    "noUnusedParameters": true, // Report errors on unused function parameters
    "noFallthroughCasesInSwitch": true // Report errors for switch cases that fall through
  },
  "include": ["src"], // Include the source directory
  "exclude": ["node_modules", "build", "dist"] // Exclude common build and dependency directories
}
